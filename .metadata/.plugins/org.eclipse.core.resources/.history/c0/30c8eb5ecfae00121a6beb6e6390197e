import Piece
from Move import Move

class Pawn(Piece.Piece):
  def __init__(self, c, px, py):
    self.color = c
    self.posX = px
    self.posY = py
    self.first_move = True
    self.material = 100
    if (self.color == "W"):
      self.string_rep = "PW"
    else:
      self.string_rep = "PB"
    if(self.color == "B"):
      self.table = [0,   0,   0,   0,   0,   0,  0,  0,
                   50, 50,  50,  50,  50,  50, 50, 50,
                   10, 10,  20,  30,  30,  20, 10, 10,
                    5,   5,  10,  27,  27,  10,  5,  5,
                    0,   0,   0,  25,  25,   0,  0,  0,
                    5,  -5, -10,   0,   0, -10, -5,  5,
                    5,  10,  10, -25, -25,  10, 10,  5,
                    0,   0,   0,   0,   0,   0,  0,  0]
      
    else:
      self.table = [0,   0,   0,   0,   0,   0,   0,   0,
                    5,  10,  10, -25, -25,  10,  10,   5,
                    5,  -5, -10,   0,   0, -10,  -5,   5,
                    0,   0,   0,  25,  25,   0,   0,   0,
                    5,   5,  10,  27,  27,  10,   5,   5,
                   10,  10,  20,  30,  30,  20,  10,  10,
                   50,  50,  50,  50,  50,  50,  50,  50,
                    0,   0,   0,   0,   0,   0,   0,   0]
    self.available_moves = None
    self.attacking = None
    self.refresh_on_change_squares = None
    
  def refresh_state(self, board):
    self.attacking = list()
    self.available_moves = list()
    self.refresh_on_change_squares = list()
    
    if self.color == "B":
      if board.matrix[self.posX - 1][self.posY] == None:
        self.available_moves += [Move(self.posX, self.posY, self.posX - 1, self.posY)]
        if(self.posX == 6
        and board.matrix[self.posX - 2][self.posY] == None):
          self.available_moves += [Move(self.posX, self.posY, self.posX - 2, self.posY)]
        self.refresh_on_change_squares += [[self.posX - 2,self.posY]]
      self.refresh_on_change_squares += [[self.posX - 1,self.posY]]
      if(self.posY < 7 and
      (not board.matrix[self.posX - 1][self.posY + 1] == None
      and board.matrix[self.posX - 1][self.posY + 1].color == "W")):
        self.available_moves += [Move(self.posX, self.posY, self.posX - 1, self.posY + 1)]
        self.attacking += [board.matrix[self.posX - 1][self.posY + 1]]
      self.refresh_on_change_squares += [[self.posX - 1,self.posY + 1]]
      if(self.posY > 0 and
      (not board.matrix[self.posX - 1][self.posY - 1] == None
      and board.matrix[self.posX - 1][self.posY - 1].color == "W")):
        self.available_moves += [Move(self.posX, self.posY, self.posX - 1, self.posY - 1)]
        self.attacking += [board.matrix[self.posX - 1][self.posY - 1]]
      self.refresh_on_change_squares += [[self.posX - 1,self.posY - 1]]
    else:
      if board.matrix[self.posX + 1][self.posY] == None:
        self.available_moves += [Move(self.posX, self.posY, self.posX + 1, self.posY)]
        if(self.posX == 1
        and board.matrix[self.posX + 2][self.posY] == None):
          self.available_moves += [Move(self.posX, self.posY, self.posX + 2, self.posY)]
        self.refresh_on_change_squares += [[self.posX + 2,self.posY]]
      self.refresh_on_change_squares += [[self.posX + 1,self.posY]]
      if(self.posY < 7 and
      (not board.matrix[self.posX + 1][self.posY + 1] == None
      and board.matrix[self.posX + 1][self.posY + 1].color == "B")):
        self.available_moves += [Move(self.posX, self.posY, self.posX + 1, self.posY + 1)]
        self.attacking += [board.matrix[self.posX + 1][self.posY + 1]]
      self.refresh_on_change_squares += [[self.posX + 1,self.posY + 1]]
      if(self.posY > 0 and
      (not board.matrix[self.posX + 1][self.posY - 1] == None
      and board.matrix[self.posX + 1][self.posY - 1].color == "B")):
        self.available_moves += [Move(self.posX, self.posY, self.posX + 1, self.posY - 1)]
        self.attacking += [board.matrix[self.posX + 1][self.posY - 1]]    
      self.refresh_on_change_squares += [[self.posX + 1,self.posY - 1]]  
  
 




