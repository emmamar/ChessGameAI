import Piece
from Castle import Castle
from Bishop import Bishop


class Queen(Piece.Piece):
  def __init__(self, c):
    self.color = c
 
  def get_available_moves_specific(self, board, px, py):
    posX = px
    posY = py
    bishop = Bishop(self.color)
    castle = Castle(self.color)
    available = (bishop.get_available_moves(
                   board, posX, posY
                 ) +
                 castle.get_available_moves(
                   board, posX, posY)
                 )

    return available

  def is_illegal(self, move, board):
    bishop = Bishop(self.color)
    castle = Castle(self.color)
    return (bishop.is_illegal(move, board)
    and castle.is_illegal(move, board))
      

  def toString(self):
    if self.color == "W":
      return "QW"
    else:
      return "QB"

